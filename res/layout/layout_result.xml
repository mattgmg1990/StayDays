<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#DEDCC3"
    android:orientation="vertical" >

    <TextView
        android:text="StayDays"
        android:textSize="12pt"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_gradient"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:padding="5dp"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:text="Estimated Hospital\nStay Time:"
                android:textSize="10pt"
                android:typeface="sans"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>

            <RelativeLayout
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"
               android:gravity="left">

               <TextView android:id="@+id/result_diagnosis_label"
                  android:textSize="9pt"
                  android:typeface="sans"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Patient Diagnosis: "
                  android:textColor="#000000"
                  android:textStyle="bold"
                  android:layout_marginRight="20dp"/>

              <TextView android:id="@+id/result_diagnosis_value"
                   android:textSize="9pt"
                   android:typeface="sans"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/result_diagnosis_label"
                   android:text="Chest Pain due to heart attack"
                   android:textColor="#000000"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="left">

                <TextView android:id="@+id/result_sex_label"
                    android:textSize="9pt"
                    android:typeface="sans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient Gender: "
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"/>

                <TextView android:id="@+id/result_sex_value"
                    android:textSize="9pt"
                    android:typeface="sans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result_sex_label"
                    android:text="Female"
                    android:textColor="#000000"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:gravity="left">

                <TextView android:id="@+id/result_age_label"
                    android:textSize="9pt"
                    android:typeface="sans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient Age Group: "
                    android:textColor="#000000"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"/>

                <TextView android:id="@+id/result_age_value"
                    android:textSize="9pt"
                    android:typeface="sans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result_age_label"
                    android:text="65+"
                    android:textColor="#000000"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="left">

                <TextView android:id="@+id/stay_one_label"
                    android:textSize="9pt"
                    android:typeface="sans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Day: "
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"/>

                <TextView android:id="@+id/stay_one_percent"
                    android:textSize="9pt"
                    android:typeface="sans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="23% of Patients"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="left">

                <TextView android:id="@+id/stay_two_label"
                    android:textSize="9pt"
                    android:typeface="sans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 - 4 Days: "
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"/>

                <TextView android:id="@+id/stay_two_percent"
                    android:textSize="9pt"
                    android:typeface="sans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="23% of Patients"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="left">

                <TextView android:id="@+id/stay_three_label"
                    android:textSize="9pt"
                    android:typeface="sans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 - 7 Days: "
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"/>

                <TextView android:id="@+id/stay_three_percent"
                    android:textSize="9pt"
                    android:typeface="sans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="23% of Patients"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="left">

                <TextView android:id="@+id/stay_four_label"
                    android:textSize="9pt"
                    android:typeface="sans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8+ Days: "
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"/>

                <TextView android:id="@+id/stay_four_percent"
                    android:textSize="9pt"
                    android:typeface="sans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="23% of Patients"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <Button
                android:id="@+id/about_button"
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:text="About This App"
                android:textStyle="bold"
                android:textSize="8pt"
                android:background="@drawable/calculate_button_gradient"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:onClick="onAboutClicked" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
